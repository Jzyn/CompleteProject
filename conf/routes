# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~



#######################
# Public Site  Routes #
#######################
GET     /                               	controllers.HomeController.index()

GET      /whatson.html                           controllers.HomeController.whatson

GET      /contact.html                           controllers.HomeController.contact

#GET     /signup.html                           controllers.HomeController.signup

#GET     /adduser                               controllers.HomeController.addUser

#POST    /addUserSubmit                   controllers.HomeController.addUserSubmit

GET	 /inferno.html				controllers.HomeController.inferno

GET	 /arrival.html				controllers.HomeController.arrival

GET	 /jackreacher.html			controllers.HomeController.jackreacher

GET	 /trolls.html				controllers.HomeController.trolls

GET	 /gott.html				controllers.HomeController.gott

GET	 /joneses.html				controllers.HomeController.joneses

GET	 /kubo.html				controllers.HomeController.kubo

GET	/fantasticbeasts.html		     controllers.HomeController.fantasticbeasts

GET 	/movies				controllers.HomeController.movies(gen:Long ?=0L)


################
# Admin Routes #
################

# movies accepts a parameter default to 0 (Long)
GET     /admin/movies               controllers.AdminController.movies(gen:Long ?=0L)

GET     /admin/addmovie                  controllers.AdminController.addMovie

# Data submitted by the form
POST    /admin/addMovieSubmit            controllers.AdminController.addMovieSubmit

GET    /admin/delMovie/:id               controllers.AdminController.deleteMovie(id: Long)

GET	    /admin/updateMovie/:id        controllers.AdminController.updateMovie(id: Long)

################
# Login routes #
################
GET     /login                       controllers.security.LoginController.login
POST    /loginSubmit                 controllers.security.LoginController.loginSubmit
GET     /logout                      controllers.security.LoginController.logout



# An example controller showing how to use dependency injection
GET     /count                       controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                     controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)
