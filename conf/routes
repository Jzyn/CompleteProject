# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

#######################
# Public Site  Routes #
#######################
GET     /                       controllers.HomeController.index()

GET     /whatson                 controllers.HomeController.whatson

# products accepts a parameter default to 0 (Long)
GET     /movies             controllers.HomeController.movies(gen:Long ?=0L)

GET /contact 			controllers.HomeController.contact


################
# Admin Routes #
################
# products accepts a parameter default to 0 (Long)
GET     /admin/movies              controllers.AdminController.movies(gen:Long ?=0L)

# Request to load the add product form
GET     /admin/addmovie                  controllers.AdminController.addMovie

# Data submitted by the form
POST    /admin/addMovieSubmit            controllers.AdminController.addMovieSubmit

# Delete a product by an id passed as a parameter
GET    /admin/delMovie/:id               controllers.AdminController.deleteMovie(id: Long)

# Update a product by id
GET	    /admin/updateMovie/:id        controllers.AdminController.updateMovie(id: Long)

################
# Login routes #
################
GET     /login                       controllers.security.LoginController.login
POST    /loginSubmit                 controllers.security.LoginController.loginSubmit
GET     /logout                      controllers.security.LoginController.logout


################
# Movie Pages  #
################
GET	/inferno				controllers.HomeController.inferno

GET	/arrival			controllers.HomeController.arrival

GET	/jackreacher			controllers.HomeController.jackreacher

GET	/trolls				controllers.HomeController.trolls

GET	/gott				controllers.HomeController.gott

GET	/joneses				controllers.HomeController.joneses

GET	/kubo				controllers.HomeController.kubo

GET	/fantasticbeasts			controllers.HomeController.fantasticbeasts



# An example controller showing how to use dependency injection
GET     /count                       controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                     controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                controllers.Assets.versioned(path="/public", file: Asset)
